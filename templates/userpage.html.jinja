{%extends 'base.html.jinja'%}
{%block content%}
<div class="header">{{page_title}}</div>

<div class="threadcontent">
  <div class="threadlistitem">
    <div class="left">
      <a href="/u/{{u.uid}}"><img class="avatar" src="/avatar/{{u.uid}}" alt=""></a>
    </div>
    <div class="right">
      <div class="details">
        <div class="post_content">
          {{convert_markdown(u.profile_string)|safe}}
          {%if u.brief%}
          <blockquote>{{convert_markdown(u.brief)|safe}}</blockquote>
          {%endif%}
        </div>
      </div>
    </div>
  </div>

  {%if (invitations!=None)%}
  <div class="invitations">
    <div class="invitation_list_title">
      我的邀请码
    </div>
    <div class="invitation_list">

      {%for i in invitations%}
      <div class="invitation{{'' if i.active else ' inactive'}}">
        <a href="/register?code={{i._key}}">{{i._key}}</a>
        <span>{{format_time_datetime(i.t_c)}}</span>
        <span>{{'未使用' if i.active else '已使用'}}</span>
      </div>
      {%endfor%}

    </div>
    <button type="button" onclick='generate_invitation_code()'>生成邀请码</button>
  </div>
  {%endif%}

</div>

{%endblock%}
